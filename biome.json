{
  "$schema": "https://biomejs.dev/schemas/1.1.2/schema.json",
  "files": {
    "ignore": [
      "**/.devcontainer/*",
      "**/.git/*",
      "**/.github/*",
      "**/.history/*",
      "**/.vscode/*",
      "**/local-storage/*",
      "**/node_modules/*",
      "/src/disabled/**/*"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteProperties": "preserve",
      "arrowParentheses": "always",
      "jsxQuoteStyle": "single",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingComma": "es5"
    }
  }
}
